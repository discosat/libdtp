{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Meson build",
			"command": "meson setup --reconfigure build && ninja -C build",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/build"
				]
			},
			"group": "build",
			"detail": "compiler: /usr/bin/aarch64-linux-gnu-gcc"
		}
	]
}